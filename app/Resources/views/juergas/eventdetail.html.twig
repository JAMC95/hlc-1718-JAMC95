{% extends 'layout.html.twig' %}

{% block content %}
    <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
           <h1>{{ juerga.nombre }}</h1>
            <h2>Listado de asistentes</h2>
        </tr>
        </thead>
        <tbody>
            <tr>
                {% for asistente in asistentes %}
                <td>{{ asistente.nombreUsuario }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No hay asistentes que mostrar</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('mostrar_juergas') }}" class="btn btn-info"><i class="fa fa-backward"></i> Volver</a>

    {% if is_granted('EVENTO_MODIFICAR', juerga) %} <a href="{{  path('editar_evento', {'evento': juerga.id}) }}" class="btn btn-warning">Editar evento</a> {%  endif %}
{% endblock %}
